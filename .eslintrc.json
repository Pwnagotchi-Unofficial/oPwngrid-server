{
    "env": {
        "browser": false,
        "node": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
        "init-declarations": [
            "error",
            "always"
        ],
        "prefer-const": [
            "error",
            {
                "destructuring": "all"
            }
        ],
        "spaced-comment": [
            "warn",
            "always"
        ],
        "no-trailing-spaces": [
            "error"
        ],
        "line-comment-position": [
            "error",
            {
                "position": "above"
            }
        ],
        "comma-dangle": [
            "error", 
            "never"
        ],
        "comma-spacing": [
            "error", 
            { 
                "before": false, 
                "after": true 
            }
        ],
        "arrow-parens": [
            "error", 
            "always"
        ],
        "arrow-spacing": [
            "error", 
            { 
                "before": true, 
                "after": true 
            }
        ],
        "brace-style": [
            "error"
        ],
        "array-bracket-spacing": [
            "error", 
            "always"
        ]
    }
}
